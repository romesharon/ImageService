@model WebApplication2.Models.PhotosModel

@{
    ViewBag.Title = "DeletePhoto";
}

<h2>DeletePhoto</h2>

<p>Do you want to delete @ViewBag.path?</p>

<button type="button" id="btnCancel">Cancel</button>
<button type="button" id="btnOK">OK</button>

<script>
    $("#btnCancel").click(function () {
        window.location.href = "Photos";
    });

    $("#btnOK").click(function () {
        $.post("@Url.Action("DeletePhotoOK")", function () {
            window.location.href = "Photos";
        });
    });
</script>